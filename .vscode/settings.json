{
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "stylelint.enable": true,
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer"
          ]
        }
      ]
    }
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  }
}
